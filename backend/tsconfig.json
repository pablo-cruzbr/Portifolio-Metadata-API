{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    
    // --- MÓDULOS: CONFIGURAÇÃO PARA COMMONJS (ESTÁVEL PARA PRISMA) ---
    "module": "CommonJS",        // Mude para CommonJS
    "moduleResolution": "node",  // Padrão para CommonJS
    "esModuleInterop": true,     // Permite import/export para bibliotecas CJS (como express)
    "resolveJsonModule": true,   // Útil para importar arquivos .json
    
    // --- ESTILO/REGRAS ESTREITAS (CAUSANDO TS1295) ---
    "verbatimModuleSyntax": false, // DESATIVE ESTA REGRA (Resolve TS1295)
    
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    "target": "esnext",
    "types": ["node"], // Adicione @types/node
    "lib": ["esnext"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "auto", // Mude de 'force' para 'auto' ou remova
    "skipLibCheck": true
  }
}