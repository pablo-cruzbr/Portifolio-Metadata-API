generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id              String  @id @default(uuid())
  title           String
  technologies    String?
  goal            String?
  features        String?
  functionalities String?
  future          String?

  created_at DateTime @default(now())
  update_at  DateTime @updatedAt

  imgcapa_url       String?
  imgcapa_public_id String?

  linkgihub    String?
  linklivedemo String?

  images ProjectImage[]

  @@map("projects")
}

model ProjectImage {
  id String @id @default(uuid())

  url       String?
  public_id String?

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  @@map("project_images")
}
